                  <h2>{{ bienCount }}</h2>
                  <p>Biens enregistr√©s</p>
              </div>
          </div>

          <div class="col-md-3">
              <div class="card card-stats text-center p-4 bg-light" onclick="window.location.href='{{ ea_url().setController('App\\Controller\\Admin\\ReservationCrudController') }}'">
                  <div class="fs-1 text-danger mb-2"><i class="fa fa-calendar"></i></div>
                  <h2>{{ reservationCount }}</h2>
                  <p>R√©servations</p>
              </div>
          </div>
      </div>

      <footer class="text-center mt-5 text-muted small">
          ¬© {{ "now"|date("Y") }} PurrPalace ‚Äî Administration
      </footer>
  </div>
{% endblock %}
